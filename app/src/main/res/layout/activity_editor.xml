<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto"

	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<EditText android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Title (optional)"
        android:ems="10" />
	<EditText android:gravity="top"
        android:id="@+id/desc"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter your description"
        android:layout_below="@+id/title"
        android:inputType="textMultiLine"
		android:lines="40"
		android:scrollbarSize="@dimen/activity_vertical_margin"
		/>
</RelativeLayout>
